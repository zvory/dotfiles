[
    {
        "clean": [
            "~"
        ]
    },
    {
        "link": {
            "~/.bash_profile": "bash_profile",
            "~/.bashrc": "bashrc",
            "~/.bash_logout": "bash_logout",
            "~/.bash_aliases": "bash_aliases",
            "~/.gitconfig": "gitconfig",
            "~/.i3status.conf": "i3status.conf",
            "~/.config/i3": {
                "path": "config/i3/",
                "create": true
            },
            "~/.irssi": {
                "path": "irssi/"
            },
            "~/.local/share/fonts": {
                "path":  "hack/ttf",
                "create": true
            },
            "~/.config/fontconfig/conf.d": {
                "path": "hack/config",
                "create": true
            },
            "~/.vimrc": "vimrc"
        }
    }
]
