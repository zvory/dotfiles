[
    {
        "clean": [
            "~"
        ]
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    },
    {
        "shell": [
            ["cp ~/.bashrc ~/.OLDbashrc\"$(date)\" || true"],
            ["cp ~/.bash_logout ~/.OLDbash_logout\"$(date)\" || true"],
            ["cp ~/.gitconfig ~/.OLDgitconfig\"$(date)\" || true"],
            ["cp ~/.bash_profile ~/.OLDbash_profile\"$(date)\" || true"]
        ]
    },
    {
        "link": {
            "~/.bash_aliases": "bash_aliases",
            "~/.gitconfig": {
                "path": "gitconfig",
                "force": true
            },
            "~/.i3status.conf": "i3status.conf",
            "~/.bin": "bin",
            "~/.fehbg": "fehbg",
            "~/Pictures/Proun4b.jpg": {
                "path": "Proun4b.jpg",
                "create": true
            },
            "~/.irssi": {
                "path": "irssi/"
            },
            "~/.vimrc": "vimrc"
        }
    },
    {
        "shell": [
            ["echo 'install fzf!'", "INSTALL fzf"]
        ]
    },
    {
        "shell": [
            ["echo 'install rupa/z!'", "INSTALL rupa/z"]
        ]
    }
]
	
