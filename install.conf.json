[
    {
        "clean": [
            "~"
        ]
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    },
    {
        "shell": [
            ["cp ~/.bashrc ~/.OLDbashrc"],
            ["cp ~/.bash_logout ~/.OLDbash_logout"],
            ["cp ~/.gitconfig ~/.OLDgitconfig"],
            ["cp ~/.bash_profile ~/.OLDbash_profile"]
        ]
    },
    {
        "link": {
            "~/.bash_profile": {
                "path": "bash_profile",
                "force": true
            },
            "~/.bashrc": {
                "path": "bashrc",
                "force": true
            },
            "~/.bash_logout": {
                "path": "bash_logout",
                "force": true
            },
            "~/.bash_aliases": "bash_aliases",
            "~/.gitconfig": {
                "path": "gitconfig",
                "force": true
            },
            "~/.i3status.conf": "i3status.conf",
            "~/.bin": "bin",
            "~/.config/i3": {
                "path": "config/i3/",
                "create": true
            },
            "~/.fehbg": "fehbg",
            "~/Pictures/Proun4b.jpg": {
                "path": "Proun4b.jpg",
                "create": true
            },
            "~/.irssi": {
                "path": "irssi/"
            },
            "~/.vimrc": "vimrc"
        }
    },
    {
        "shell": [
            ["yes | ./fzf/install", "Installing fzf"]
        ]
    }
]
