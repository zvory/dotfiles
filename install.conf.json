[
    {
        "clean": [
            "~"
        ]
    },
    {
        "shell": [
            ["git submodule update --init --recursive", "Installing submodules"]
        ]
    },
    {
        "link": {
            "~/.bash_profile": "bash_profile",
            "~/.bashrc": "bashrc",
            "~/.bash_logout": "bash_logout",
            "~/.bash_aliases": "bash_aliases",
            "~/.gitconfig": "gitconfig",
            "~/.i3status.conf": "i3status.conf",
            "~/.bin": "bin",
            "~/.config/i3": {
                "path": "config/i3/",
                "create": true
            },
            "~/.fehbg": "fehbg",
            "~/Pictures/Proun4b.jpg": "Proun4b.jpg",
            "~/.irssi": {
                "path": "irssi/"
            },
            "~/.local/share/fonts": {
                "path":  "hack/ttf",
                "create": true
            },
            "~/.config/fontconfig/conf.d": {
                "path": "hack/config",
                "create": true
            },
            "~/.vimrc": "vimrc"
        }
    },
    {
        "shell": [
            ["yes | ./fzf/install", "Installing fzf"]
        ]
    }
]
